<body>
    <div class="container">
        <div class="computer-icon">üíª</div>
        <h1 class="question">Apakah kamu ingin keluar dari lab komputer?</h1>
        
        <div class="buttons">
            <button class="btn btn-yes" onclick="exitLab()">Ya</button>
            <button class="btn btn-no" id="btnNo" onmouseover="moveButton()" onclick="moveButton()">Tidak</button>
        </div>
        
        <div class="success-message" id="successMessage">
            <div>üéâ Selamat! Kamu berhasil keluar dari lab komputer! üéâ</div>
            <div class="fun-text">Nikmati waktu luangmu! üòÑ</div>
        </div>
    </div>

    <script>
        let moveCount = 0;
        
        function moveButton() {
            const btnNo = document.getElementById('btnNo');
            const container = document.querySelector('.container');
            
            // Array pesan lucu yang akan muncul
            const messages = [
                "Eh, jangan pencet yang itu! üòÖ",
                "Ayolah, pilih yang 'Ya' dong! üòä",
                "Aku akan terus menghindar nih! üèÉ‚Äç‚ôÇÔ∏è",
                "Capek juga lari terus... tapi tetap tidak! üò§",
                "Pilih 'Ya' aja deh, kasihan aku! ü•∫"
            ];
            
            // Posisi random
            const maxX = container.offsetWidth - btnNo.offsetWidth - 40;
            const maxY = container.offsetHeight - btnNo.offsetHeight - 40;
            
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            
            btnNo.style.left = randomX + 'px';
            btnNo.style.top = randomY + 'px';
            
            // Ubah teks tombol dengan pesan lucu
            if (moveCount < messages.length) {
                setTimeout(() => {
                    alert(messages[moveCount]);
                }, 100);
                moveCount++;
            }
            
            // Efek gemetar pada tombol
            btnNo.style.animation = 'shake 0.5s ease-in-out';
            setTimeout(() => {
                btnNo.style.animation = '';
            }, 500);
        }
        
        function exitLab() {
            document.querySelector('.buttons').style.display = 'none';
            document.getElementById('successMessage').style.display = 'block';
            
            // Efek confetti sederhana
            createConfetti();
            
            // Ganti background
            document.body.style.background = 'linear-gradient(135deg, #4CAF50 0%, #45a049 100%)';
        }
        
        function createConfetti() {
            const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#f9ca24', '#f0932b', '#eb4d4b', '#6c5ce7'];
            
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.style.position = 'fixed';
                    confetti.style.left = Math.random() * window.innerWidth + 'px';
                    confetti.style.top = '-10px';
                    confetti.style.width = '10px';
                    confetti.style.height = '10px';
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.borderRadius = '50%';
                    confetti.style.pointerEvents = 'none';
                    confetti.style.zIndex = '1000';
                    confetti.style.transition = 'transform 3s ease-out, opacity 3s ease-out';
                    
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => {
                        confetti.style.transform = `translateY(${window.innerHeight + 20}px) rotate(720deg)`;
                        confetti.style.opacity = '0';
                    }, 100);
                    
                    setTimeout(() => {
                        document.body.removeChild(confetti);
                    }, 3100);
                }, i * 50);
            }
        }
        
        // CSS untuk animasi shake
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-10px); }
                75% { transform: translateX(10px); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
